{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2017",
        "baseUrl": ".",
        "outDir": "./build",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "resolveJsonModule": true,
        "removeComments": false,
        "esModuleInterop": true
      },
      "include": ["src/**/*"],
      "exclude": ["/node_modules"]
}